@page "/Feedback"
@using BlazorApp3.Models
@using BlazorApp3.Services
@rendermode InteractiveServer
@inject SerializationService SerializationService

<h3>Feedback</h3>
<div class="Row">
    <div>
        <p class="m-0">Автор</p>
        <input type="text" @bind="@SupportiveFields.SupAuthor"/>
        <p class="m-0">Текст отзыва</p>
        <input type="text" @bind="@SupportiveFields.SupMessage" placeholder="Введите текст"/>

        <div class="Column" style="padding-top: 4px; margin: 2px">
            <input class="Add" type="button" value="Добавить отзыв" @onclick="() => SerializationService.AddFeedback(new Models.Feedback(SupportiveFields.SupAuthor, SupportiveFields.SupMessage, SupportiveFields.SupStarsCount))"/>
            <input class="Delete" type="button" value="Удалить отзыв" @onclick="() => SerializationService.DeleteFeedback(SerializationService.Feedbacks.Last())"/>
        </div>
    </div>


    <div style="padding-left: 10px">
        <p class="m-0">Оценка</p>
        <p class="m-0"><input type="radio" name="stars" value="onestar" @onclick="() => SupportiveFields.SetValue(1)"/>⭐</p>
        <p class="m-0"><input type="radio" name="stars" value="twostar" @onclick="() => SupportiveFields.SetValue(2)"/>⭐⭐</p>
        <p class="m-0"><input type="radio" name="stars" value="threestar" @onclick="() => SupportiveFields.SetValue(3)"/>⭐⭐⭐</p>
        <p class="m-0"><input type="radio" name="stars" value="fourstar" @onclick="() => SupportiveFields.SetValue(4)"/>⭐⭐⭐⭐</p>
        <p class="m-0"><input type="radio" name="stars" value="fivestar" @onclick="() => SupportiveFields.SetValue(5)"/>⭐⭐⭐⭐⭐</p>
    </div>
</div>


<div class="Feedback">
    @foreach (var item in SerializationService.Feedbacks)
    {
        <p class="m-0" style="font-size: 12px; color: #8bb9fe">Ⓐ @item.Author</p>
        <div class="Row">
            @for (int i = 0; i < @item.StarsCount; i++)
            {
                <p class="m-0" style="font-size: 8px">⭐</p>
            }
        </div>
        <p class="Message">@item.Message</p>
    }
</div>


@code {
    protected override void OnInitialized()
    {
        SerializationService.OpenFile();
    }

}